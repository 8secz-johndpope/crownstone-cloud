{
  "name": "user",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "role": {
      "type": "string"
    }
  },
  "mixins": {
    "Cascade": {
      "GroupAccess": "userId"
    }
  },
  "hidden": ["role"],
  "validations": [],
  "relations": {
    "devices": {
      "type": "hasMany",
      "model": "Device",
      "foreignKey": "ownerId"
    },
    "currentLocation": {
      "type": "hasMany",
      "model": "Location",
      "foreignKey": "ownerId",
      "through": "Device"
    },
    "groups": {
      "type": "hasMany",
      "model": "Group",
      "foreignKey": "userId",
      "through": "GroupAccess",
      "keyThrough": ""
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "create"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "create"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "me"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "createNewGroup"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
