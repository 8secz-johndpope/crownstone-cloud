{
  "name": "Device",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string"
    },
    "address": {
      "type": "string"
    },
    "description": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "owner": {
      "type": "belongsTo",
      "model": "user",
      "foreignKey": "ownerId"
    },
    "currentLocation": {
      "type": "belongsTo",
      "model": "Location",
      "foreignKey": "currentLocationId"
    },
    "scans": {
      "type": "hasMany",
      "model": "Scan",
      "foreignKey": ""
    },
    "locationsHistory": {
      "type": "hasMany",
      "model": "Location",
      "foreignKey": "deviceId",
      "through": "TimedLocation"
    },
    "coordinatesHistory": {
      "type": "hasMany",
      "model": "Coordinate",
      "foreignKey": "stoneId",
      "through": "TimedCoordinate"
    },
    "currentCoordinate": {
      "type": "belongsTo",
      "model": "Coordinate",
      "foreignKey": "currentCoordinateId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
