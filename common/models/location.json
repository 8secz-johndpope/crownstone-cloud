{
  "name": "Location",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "GroupContent": true,
    "Cascade": {
      "StoneLocation": "locationId"
    }
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string",
      "required": false
    },
    "groundTruth": {
      "type": "boolean"
    }
  },
  "validations": [],
  "relations": {
    "stones": {
      "type": "hasAndBelongsToMany",
      "model": "Stone",
      "foreignKey": "locationId"
    },
    "presentPeople": {
      "type": "hasMany",
      "model": "user",
      "foreignKey": "currentLocationId",
      "through": "Device",
      "keyThrough": "ownerId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
