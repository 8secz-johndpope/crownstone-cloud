{
  "name": "Location",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true,
    "mongodb": {
      "collection": "Location"
    }
  },
  "mixins": {
    "GroupContent": true
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string",
      "required": false
    },
    "groundTruth": {
      "type": "boolean"
    }
  },
  "validations": [],
  "relations": {
    "stones": {
      "type": "hasAndBelongsToMany",
      "model": "Stone",
      "foreignKey": ""
    },
    "presentPeople": {
      "type": "hasMany",
      "model": "user",
      "foreignKey": "locationId",
      "through": "Device"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
