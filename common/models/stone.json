{
  "name": "Stone",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true,
    "mongodb": {
      "collection": "Stone"
    }
  },
  "mixins": {
    "GroupContent": true
  },
  "properties": {
    "name": {
      "type": "string"
    },
    "address": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string"
    },
    "type": {
      "type": "string"
    },
    "switchState": {
      "type": "boolean"
    },
    "deviceType": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "locations": {
      "type": "hasAndBelongsToMany",
      "model": "Location",
      "foreignKey": "",
      "through": "StoneLocation"
    },
    "scans": {
      "type": "hasMany",
      "model": "Scan",
      "foreignKey": ""
    },
    "powerUsageHistory": {
      "type": "hasMany",
      "model": "PowerUsage",
      "foreignKey": "stoneId"
    },
    "currentPowerUsage": {
      "type": "belongsTo",
      "model": "PowerUsage",
      "foreignKey": "currentPowerUsageId"
    },
    "energyUsageHistory": {
      "type": "hasMany",
      "model": "EnergyUsage",
      "foreignKey": "stoneId"
    },
    "currentEnergyUsage": {
      "type": "belongsTo",
      "model": "EnergyUsage",
      "foreignKey": "currentEnergyUsageId"
    },
    "coordinatesHistory": {
      "type": "hasMany",
      "model": "Coordinate",
      "foreignKey": "stoneId",
      "through": "TimedCoordinate"
    },
    "currentCoordinate": {
      "type": "belongsTo",
      "model": "Coordinate",
      "foreignKey": "currentCoordinateId"
    },
    "powerCurveHistory": {
      "type": "hasMany",
      "model": "PowerCurve",
      "foreignKey": "stoneId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
