{
  "name": "Stone",
  "replaceOnPUT": false,
  "base": "PersistedModel",
  "strictDelete": true,
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "DisableCommon": true,
    "SphereContent": true,
    "EnableHooks": true,
    "ChangeTracker": false,
    "Cascade": {
      "StoneLocation": "stoneId",
      "StoneLocation": "sphereId"
    },
    "TimeStamps": {
      "required": false,
      "validateUpsert": true
    },
    "Util": true
  },
  "properties": {
    "name": {
      "type": "string"
    },
    "address": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string"
    },
    "type": {
      "type": "string"
    },
    "dimmingEnabled": {
      "type": "boolean",
      "default": false
    },
    "deviceType": {
      "type": "string"
    },
    "major": {
      "type": "number"
    },
    "minor": {
      "type": "number"
    },
    "uid": {
      "type": "number"
    },
    "icon": {
      "type": "string"
    },
    "json": {
      "type": "string"
    },
    "touchToToggle": {
      "type": "boolean"
    },
    "tapToToggle": {
      "type": "boolean"
    },
    "lastSeenAt": {
      "type": "date"
    },
    "firmwareVersion": {
      "type": "string"
    },
    "bootloaderVersion": {
      "type": "string"
    },
    "hardwareVersion": {
      "type": "string"
    },
    "onlyOnWhenDark": {
      "type": "boolean"
    },
    "meshNetworkId" : {
      "type": "number"
    },
    "hidden": {
      "type": "boolean"
    },
    "locked": {
      "type": "boolean"
    }
  },
  "validations": [],
  "relations": {
    "location": {
      "type": "belongsTo",
      "model": "Location",
      "foreignKey": "locationId"
    },
    "locations": {
      "type": "hasAndBelongsToMany",
      "model": "Location",
      "foreignKey": "stoneId",
      "through": "StoneLocation"
    },
    "currentPowerUsage": {
      "type": "belongsTo",
      "model": "PowerUsage",
      "foreignKey": "currentPowerUsageId"
    },
    "powerUsageHistory": {
      "type": "hasMany",
      "model": "PowerUsage",
      "foreignKey": "stoneId"
    },
    "currentEnergyUsage": {
      "type": "belongsTo",
      "model": "EnergyUsage",
      "foreignKey": "currentEnergyUsageId"
    },
    "currentSwitchState": {
      "type": "belongsTo",
      "model": "SwitchState",
      "foreignKey": "currentSwitchStateId"
    },
    "energyUsageHistory": {
      "type": "hasMany",
      "model": "EnergyUsage",
      "foreignKey": "stoneId"
    },
    "appliance": {
      "type": "belongsTo",
      "model": "Appliance",
      "foreignKey": "applianceId"
    },
    "schedules": {
      "type": "hasMany",
      "model": "Schedule",
      "foreignKey": "stoneId"
    },
    "switchStateHistory": {
      "type": "hasMany",
      "model": "SwitchState",
      "foreignKey": "stoneId"
    }
  },
  "acls": [],
  "methods": {}
}
