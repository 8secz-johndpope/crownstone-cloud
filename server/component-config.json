{
  "loopback-component-explorer": {
    "mountPath": "/explorer"
  },
  "loopback-component-oauth2": {
    "dataSource": "db",
    "resourceServer": true,
    "authorizationServer": true,
    "loginPage": "/loginOauth",
    "loginPath": "/loginOauthStep2",
    "tokenPath": "/oauth/token"
  },
  "loopback-component-access-groups": {
    "userModel": "user",
    "roleModel": "Role",
    "groupModel": "Sphere",
    "groupAccessModel": "SphereAccess",
    "foreignKey": "sphereId",
    "groupRoles": [
      "$group:admin",
      "$group:member",
      "$group:guest"
    ]
  }

}
